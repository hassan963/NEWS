<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/box">

    <TextView
        android:id="@+id/headerTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/HeaderText"
        android:text="@string/national"/>

    <View
        android:id="@+id/lineOne"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/colorLine"
        android:layout_below="@id/headerTV"/>

    <ImageView
        android:id="@+id/header_IV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lineOne"
        android:scaleType="fitCenter"
        android:src="@drawable/pictwo"/>

    <TextView
        android:id="@+id/titleTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/header_IV"
        android:layout_centerHorizontal="true"
        android:padding="6dp"
        android:textSize="16sp"
        android:textColor="#121010"
        android:text="বঙ্গবন্ধুর প্রতিকৃতিতে শ্রদ্ধা জানাল নবনির্বাচিত এমপিরা" />

    <TextView
        android:id="@+id/timeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="২৬ মিনিট আগে"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:layout_below="@id/titleTV" />
    <TextView
        android:id="@+id/readCountTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="২৬ মিনিট আগে"
        android:layout_centerHorizontal="true"
        android:alpha="0.5"
        android:layout_below="@id/timeTV" />

    <View
        android:id="@+id/line_one"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:alpha="0.5"
        android:background="@color/colorLine"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_below="@id/readCountTV"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerviewList"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line_one"
        android:layout_marginBottom="8dp">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>